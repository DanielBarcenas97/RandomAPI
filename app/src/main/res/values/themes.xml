<resources>
    <!-- Base application theme. -->
    <style name="Theme.RandomAPI" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/feedback_premium_dark</item> <!-- Color Toolbar Main color -->
        <item name="colorPrimaryDark">@color/feedback_premium_dark</item> <!-- Color status bar -->
        <item name="colorPrimaryVariant">@color/feedback_premium_medium</item> <!-- Color status bar -->
        <item name="colorOnPrimary">@color/feedback_premium_light</item> <!-- Color status bar -->
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/feedback_premium_dark</item> <!-- Color status bar -->
        <item name="colorSecondaryVariant">@color/feedback_premium_light</item> <!-- Color status bar -->
        <item name="colorOnSecondary">@color/feedback_premium_light</item> <!-- Color status bar -->
        <!-- Status bar color -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item> <!-- Color status bar -->
    </style>

    <style name="roundedImageView" parent="Theme.RandomAPI">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="SplashTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item> <!-- Color status bar -->
    </style>
</resources>